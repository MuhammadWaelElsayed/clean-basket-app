########################################
# APPLICATION CONFIGURATION
########################################

APP_NAME=CleanBasket
APP_ENV=production
APP_DEBUG=false
APP_KEY=
APP_URL=http://localhost

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

########################################
# DATABASE CONFIGURATION
########################################

DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=cleanbasket
DB_USERNAME=laravel
DB_PASSWORD=secure_password_here
DB_ROOT_PASSWORD=root_secure_password_here

########################################
# CACHE & SESSION CONFIGURATION
########################################

CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis
BROADCAST_DRIVER=log

########################################
# REDIS CONFIGURATION
########################################

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password_here

########################################
# MAIL CONFIGURATION
########################################

MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@example.com
MAIL_FROM_NAME="CleanBasket"

########################################
# PHPMYADMIN CONFIGURATION
########################################

PMA_HOST=db
PMA_PORT=3306
PMA_USER=laravel
PMA_PASSWORD=secure_password_here
PMA_ABSOLUTE_URI=http://localhost:8888/

########################################
# DOCKER PORT CONFIGURATION
########################################

# External HTTP port
APP_PORT=80

# External HTTPS port  
APP_PORT_SSL=443

# PhpMyAdmin web interface port
PHPMYADMIN_PORT=8888

# Internal service ports (for reference - do not change)
MYSQL_PORT_EXPOSED=3306
REDIS_PORT_EXPOSED=6379

########################################
# AWS CONFIGURATION (OPTIONAL)
########################################

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_URL=

########################################
# FILE UPLOAD CONFIGURATION
########################################

FILESYSTEM_DISK=local
FILESYSTEM_URL=

########################################
# WEBSOCKET/REVERB CONFIGURATION (OPTIONAL)
########################################

REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=localhost
REVERB_PORT=8080

########################################
# ADDITIONAL LARAVEL CONFIGURATION
########################################

# Sanctum/API
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1
